@page
@model Yukigroup_WEB.Pages.Account.endbudgetModel
@{
    ViewData["Title"] = "レジ金終了時 (endbudget)";
}

<h2>レジ金終了時</h2>

<form method="post" class="form-container">
    <input type="hidden" asp-for="EndEditId" />

    <div class="form-item">
        <label>日付</label>
        <input type="date" asp-for="EndDate" required />
    </div>
    <div class="form-item">
        <label>確認者</label>
        <select asp-for="EndConfimer" required>
            <option value="">選択してください</option>
            <option value="Yuki">Yuki</option>
            <option value="Subaru">Subaru</option>
            <option value="Kasumi">Kasumi</option>
            <option value="Subaru">Subaru</option>
            <option value="Naoya">Naoya</option>
            <option value="Teru">Teru</option>
            <option value="Hinako">Hinako</option>
        </select>
    </div>
    <div class="form-item">
        <label>1万円札</label>
        <input type="number" asp-for="EndItimanen" />
    </div>
    <div class="form-item">
        <label>5千円札</label>
        <input type="number" asp-for="EndGosenen" />
    </div>
    <div class="form-item">
        <label>2千円札</label>
        <input type="number" asp-for="EndNisenen" />
    </div>
    <div class="form-item">
        <label>千円札</label>
        <input type="number" asp-for="EndSenen" />
    </div>
    <div class="form-item">
        <label>500円硬貨</label>
        <input type="number" asp-for="EndGohyakuen" />
    </div>
    <div class="form-item">
        <label>100円硬貨</label>
        <input type="number" asp-for="EndHyakuen" />
    </div>
    <div class="form-item">
        <label>50円硬貨</label>
        <input type="number" asp-for="EndGozyuen" />
    </div>
    <div class="form-item">
        <label>10円硬貨</label>
        <input type="number" asp-for="EndZyuen" />
    </div>
    <div class="form-item">
        <label>5円硬貨</label>
        <input type="number" asp-for="EndGoen" />
    </div>
    <div class="form-item">
        <label>1円硬貨</label>
        <input type="text" asp-for="EndItien" />
    </div>
    <div>
        <button type="submit" asp-page-handler="Save">追加 / 更新</button>
    </div>
</form>

<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>日付</th>
            <th>確認者</th>
            <th>1万円札</th>
            <th>5千円札</th>
            <th>二千円札</th>
            <th>千円札</th>
            <th>500円硬貨</th>
            <th>100円硬貨</th>
            <th>50円硬貨</th>
            <th>10円硬貨</th>
            <th>5円硬貨</th>
            <th>1円硬貨</th>
            <th>合計</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Rows != null && Model.Rows.Count > 0)
        {
            foreach (var row in Model.Rows)
            {
                <tr>
                    @* A列(ID)を非表示にして残りの列だけ表示 *@
                    @foreach (var cell in row.Skip(1))
                    {
                        <td>@cell</td>
                    }

                    <td>
                        <div class="btn-inline-container">
                            <form method="post" asp-page-handler="Edit" asp-route-id="@row[0]">
                                <button type="submit">編集</button>
                            </form>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@row[0]"
                                  onsubmit="return confirm('削除してよろしいですか？');">
                                <button type="submit">削除</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="13">データがありません。</td></tr>
        }
    </tbody>
</table>

<a asp-page="/Account/Index" class="btn btn-secondary mt-3">戻る</a>
